<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.jverbruggen.jrides</groupId>
  <artifactId>jrides</artifactId>
  <name>jrides</name>
  <version>1.0_${minecraft.version.short}</version>
  <description>Bring coasters to your Minecraft server!</description>
  <url>https://github.com/JVerbruggen/jrides</url>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/JVerbruggen/jrides/issues</url>
  </issueManagement>
  <inceptionYear>2023</inceptionYear>
  <developers>
    <developer>
      <id>JVerbruggen</id>
      <name>J Verbruggen</name>
      <roles>
        <role>Lead Developer</role>
      </roles>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GPL-3.0</name>
      <url>https://www.gnu.org/licenses/gpl-3.0.html</url>
    </license>
  </licenses>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <fork>true</fork>
          <meminitial>512m</meminitial>
          <maxmem>2048m</maxmem>
          <source>${java.versioneasy}</source>
          <target>${java.versioneasy}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <id>jrides-api</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>api</classifier>
              <includes>
                <include>com/jverbruggen/jrides/api/**/*.class</include>
                <include>com/jverbruggen/jrides/event/**/*.class</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>${project.artifactId}</finalName>
              <outputFile>${project.artifactOutput}/${project.artifactId}.jar</outputFile>
              <outputDirectory>${project.artifactOutput}</outputDirectory>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <relocations>
            <relocation>
              <pattern>de.tr7zw.changeme.nbtapi</pattern>
              <shadedPattern>com.jverbruggen.jrides.nbtapi</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.google.code.gson</pattern>
              <shadedPattern>com.jverbruggen.jrides.gson</shadedPattern>
            </relocation>
          </relocations>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>jrides-1.19.2</id>
      <properties>
        <minecraft.version.apiversion>1.19</minecraft.version.apiversion>
        <minecraft.version.short>1.19.2</minecraft.version.short>
      </properties>
    </profile>
    <profile>
      <id>jrides-1.20.1</id>
      <properties>
        <minecraft.version.apiversion>1.20</minecraft.version.apiversion>
        <minecraft.version.short>1.20.1</minecraft.version.short>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>dmulloy2-repo</id>
      <url>https://repo.dmulloy2.net/repository/public/</url>
    </repository>
    <repository>
      <id>codemc-repo</id>
      <url>https://repo.codemc.org/repository/maven-public/</url>
    </repository>
    <repository>
      <id>sk89q-repo</id>
      <url>https://maven.enginehub.org/repo/</url>
    </repository>
    <repository>
      <id>mgdev-repo</id>
      <url>https://ci.mg-dev.eu/plugin/repository/everything/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>maven-snapshots</id>
      <url>https://repository.apache.org/content/repositories/snapshots/</url>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.6.0-RC1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-jupiter-api</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-params</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-engine</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>1.19.2-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.comphenix.protocol</groupId>
      <artifactId>ProtocolLib</artifactId>
      <version>5.1.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.sk89q.worldguard</groupId>
      <artifactId>worldguard-bukkit</artifactId>
      <version>7.0.5</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>RELEASE</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <java.versioneasy>16</java.versioneasy>
    <java.version>16.0.1</java.version>
    <maven.compiler.source>16.0.1</maven.compiler.source>
    <project.artifactIdApi>jrides-api</project.artifactIdApi>
    <project.artifactOutput>${testServer.location}/plugins</project.artifactOutput>
    <maven.compiler.target>16.0.1</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <minecraft.version>${minecraft.version.short}-R0.1-SNAPSHOT</minecraft.version>
    <project.artifactIdApiOutput>/api</project.artifactIdApiOutput>
    <testServer.location>../jrides_testserver/${minecraft.version.short}</testServer.location>
  </properties>
</project>
